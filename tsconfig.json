{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2023",
		"allowJs": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ESNext"],
		"jsx": "react"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.css"],
	"exclude": ["agent-os/**/*", "vitest.config.ts", "src/test/**/*"]
}
